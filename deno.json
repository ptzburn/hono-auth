{
  "imports": {
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.0.2",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.2",
    "@neondatabase/serverless": "npm:@neondatabase/serverless@^1.0.1",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.9.12",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/expect": "jsr:@std/expect@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "better-auth": "npm:better-auth@^1.3.3",
    "drizzle-kit": "npm:drizzle-kit@^0.31.4",
    "drizzle-orm": "npm:drizzle-orm@^0.44.3",
    "drizzle-seed": "npm:drizzle-seed@^0.3.1",
    "drizzle-zod": "npm:drizzle-zod@^0.8.2",
    "form-data": "npm:form-data@^4.0.4",
    "hono": "npm:hono@^4.8.5",
    "mailgun.js": "npm:mailgun.js@^12.0.3",
    "zod": "npm:zod@^4.0.10"
  },
  "tasks": {
    "start": "deno serve --allow-net --allow-env --allow-read --env-file ./src/app.ts",
    "dev": "deno serve --port 8000 --allow-net --allow-env --allow-read --env-file --watch ./src/app.ts",
    "lint": "deno lint .",
    "lint:fix": "deno task lint --fix",
    "typecheck": "deno check ./src/**/*.ts",
    "db:generate:migration": "deno -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrate": "deno -A --node-modules-dir npm:drizzle-kit migrate",
    "db:studio": "deno -A --node-modules-dir npm:drizzle-kit studio",
    "deploy": "deployctl deploy --project=ptzburn-blog-api --entrypoint=src/app.ts",
    "test:posts": "deno test --allow-read --allow-write --allow-run --allow-net --allow-sys --allow-env --env-file=.env.test src/tests/posts.test.ts",
    "test:comments": "deno test --allow-read --allow-write --allow-run --allow-net --allow-sys --allow-env --env-file=.env.test src/tests/comments.test.ts",
    "db:push:test": "deno run --allow-net --node-modules-dir --allow-env --allow-read --allow-sys --allow-write --allow-run --env-file=.env.test npm:drizzle-kit push"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "no-console"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "deploy": {
    "project": "a5a9eb3d-7d78-4afa-b936-29f16bb46c2f",
    "exclude": [
      "**/node_modules"
    ],
    "include": [],
    "entrypoint": "src/app-run.ts"
  }
}
