{
  "imports": {
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.0.2",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.2",
    "@neondatabase/serverless": "npm:@neondatabase/serverless@^1.0.1",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.9.12",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "better-auth": "npm:better-auth@^1.3.3",
    "drizzle-kit": "npm:drizzle-kit@^0.31.4",
    "drizzle-orm": "npm:drizzle-orm@^0.44.3",
    "drizzle-seed": "npm:drizzle-seed@^0.3.1",
    "form-data": "npm:form-data@^4.0.4",
    "hono": "npm:hono@^4.8.5",
    "mailgun.js": "npm:mailgun.js@^12.0.3",
    "zod": "npm:zod@^4.0.10"
  },
  "tasks": {
    "start": "deno run --allow-net ./src/app-run.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --watch ./src/app-run.ts",
    "lint": "deno lint .",
    "lint:fix": "deno task lint --fix",
    "db:generate:migration": "deno -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrate": "deno -A --node-modules-dir npm:drizzle-kit migrate",
    "db:studio": "deno -A --node-modules-dir npm:drizzle-kit studio"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "no-console"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
